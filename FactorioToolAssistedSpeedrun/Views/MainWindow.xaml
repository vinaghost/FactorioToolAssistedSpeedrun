<Window
    x:Class="FactorioToolAssistedSpeedrun.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:conventers="clr-namespace:FactorioToolAssistedSpeedrun.Conventers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:FactorioToolAssistedSpeedrun.Views"
    xmlns:vm="clr-namespace:FactorioToolAssistedSpeedrun.ViewModels"
    Title="{Binding MenuBarViewModel.ProjectName, StringFormat={}{0} - Factorio Tool Assisted Speedrun}"
    Width="1200"
    Height="900"
    d:DataContext="{d:DesignInstance vm:MainViewModel,
                                     IsDesignTimeCreatable=True}"
    mc:Ignorable="d">
    <Window.Style>
        <Style BasedOn="{StaticResource {x:Type Window}}" TargetType="Window" />
    </Window.Style>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <behaviors:Interaction.Triggers>
        <behaviors:EventTrigger EventName="Loaded" SourceObject="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}">
            <behaviors:InvokeCommandAction Command="{Binding LoadSettingsCommand}" />
        </behaviors:EventTrigger>
    </behaviors:Interaction.Triggers>
    <Grid>
        <Grid x:Name="LayoutRoot">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <views:MenuBar Grid.Row="0" DataContext="{Binding MenuBarViewModel}" />
            <!--  Toolbar area  -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <views:StepTypePanel Grid.Column="0" DataContext="{Binding StepTypePanelViewModel}" />
                <GridSplitter
                    Grid.Column="1"
                    Width="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Stretch" />
                <views:StepDetailPanel Grid.Column="2" DataContext="{Binding StepDetailPanelViewModel}" />
            </Grid>
            <!--  Data panel  -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="6*" />
                </Grid.ColumnDefinitions>
                <TabControl Grid.Column="0">
                    <TabItem Header="Imports">
                        <views:ImportTab DataContext="{Binding ImportTabViewModel}" />
                    </TabItem>
                    <TabItem Header="Templates">
                        <views:TemplatesTab DataContext="{Binding TemplatesTabViewModel}" />
                    </TabItem>
                </TabControl>

                <GridSplitter
                    Grid.Column="1"
                    Width="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Stretch" />

                <views:StepPanel Grid.Column="2" DataContext="{Binding StepPanelViewModel}" />
            </Grid>
        </Grid>
        <Grid Visibility="{Binding LoadingViewModel.IsShown, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Style="{DynamicResource Background}" />
            <Border Style="{DynamicResource Content}">
                <ProgressBar
                    Width="400"
                    Height="20"
                    Margin="10"
                    IsIndeterminate="True" />
                <!--<TextBlock x:Name="Message" Margin="10" />-->
            </Border>
        </Grid>
    </Grid>
</Window>