<Window x:Class="FactorioToolAssistedSpeedrun.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:FactorioToolAssistedSpeedrun.ViewModels"
        xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:views="clr-namespace:FactorioToolAssistedSpeedrun.Views"
        xmlns:conventers="clr-namespace:FactorioToolAssistedSpeedrun.Conventers"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance vm:MainViewModel, IsDesignTimeCreatable=True}"
        Title="{Binding MenuBarViewModel.ProjectName, StringFormat={}{0} - Factorio Tool Assisted Speedrun}" Height="900" Width="1200">
    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}" />
    </Window.Style>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <conventers:StepTypeToStringConverter x:Key="StepTypeToStringConverter" />
        <conventers:ItemToHumanizeNameConverter x:Key="ItemToHumanizeNameConverter" />
    </Window.Resources>
    <behaviors:Interaction.Triggers>
        <behaviors:EventTrigger EventName="Loaded"
                                SourceObject="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}">
            <behaviors:InvokeCommandAction Command="{Binding LoadSettingsCommand}" />
        </behaviors:EventTrigger>
    </behaviors:Interaction.Triggers>
    <Grid>
        <Grid x:Name="LayoutRoot">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <views:MenuBar Grid.Row="0" DataContext="{Binding MenuBarViewModel}" />
            <!--Toolbar area-->
            <StackPanel Orientation="Horizontal"  Grid.Row="1">
                <views:StepTypePanel DataContext="{Binding StepTypePanelViewModel}" />
                <views:StepDetailPanel DataContext="{Binding StepDetailPanelViewModel}" />
            </StackPanel>

            <!-- Data panel -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="6*" />
                </Grid.ColumnDefinitions>
                <GridSplitter Grid.Column="1"
                              Width="5"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Stretch" />
                <Grid Grid.Column="2">
                    <DockPanel LastChildFill="True">
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="2">
                            <Button Content="Add" Width="75" Margin="2" />
                            <Button Content="Change" Width="75" Margin="2" />
                            <Button Content="Delete" Width="75" Margin="2" />
                            <Button Content="Move Up" Width="75" Margin="2" />
                            <Button Content="Move Down" Width="75" Margin="2" />
                            <Button Content="Skip" Width="60" Margin="20,2,2,2" />
                            <Button Content="Split" Width="60" Margin="2" />
                        </StackPanel>
                        <DataGrid x:Name="Steps"
                                  ItemsSource="{Binding StepCollection,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                  EnableRowVirtualization="True"
                                  VirtualizingPanel.IsVirtualizing="True"
                                  VirtualizingPanel.VirtualizationMode="Recycling"
                                  ScrollViewer.IsDeferredScrollingEnabled="True"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserSortColumns="False"
                                  CanUserReorderColumns="False"
                                  CanUserResizeRows="False"
                                  Margin="0,5,0,0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="" Binding="{Binding Location}" />
                                <DataGridTextColumn Header="Step" Binding="{Binding Type, Converter={StaticResource StepTypeToStringConverter}}" Width="60" />
                                <DataGridTextColumn Header="X" Binding="{Binding X}" Width="50" />
                                <DataGridTextColumn Header="Y" Binding="{Binding Y}" Width="50" />
                                <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="60" />
                                <DataGridTextColumn Header="Item" Binding="{Binding Item, Converter={StaticResource ItemToHumanizeNameConverter}}" Width="100" />
                                <DataGridTextColumn Header="Orientation" Binding="{Binding Orientation}" Width="60" />
                                <DataGridTextColumn Header="Modifier" Binding="{Binding Modifier}" Width="60" />
                                <DataGridTextColumn Header="Comment" Binding="{Binding Comment}" Width="60" />
                                <DataGridCheckBoxColumn Header="IsSkip" Binding="{Binding IsSkip}" Width="Auto" />
                                <DataGridCheckBoxColumn Header="IsSplit" Binding="{Binding IsSplit}" Width="Auto" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </Grid>
            </Grid>
        </Grid>
        <Grid Visibility="{Binding LoadingViewModel.IsShown, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Style="{DynamicResource Background}" />
            <Border Style="{DynamicResource Content}">
                <ProgressBar IsIndeterminate="True" Width="400"  Height="20" Margin="10" />
                <!--<TextBlock x:Name="Message" Margin="10" />-->
            </Border>
        </Grid>
    </Grid>
</Window>