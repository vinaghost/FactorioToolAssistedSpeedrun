<UserControl
    x:Class="FactorioToolAssistedSpeedrun.Views.MenuBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FactorioToolAssistedSpeedrun.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:FactorioToolAssistedSpeedrun.ViewModels"
    d:DataContext="{d:DesignInstance vm:MenuBarViewModel,
                                     IsDesignTimeCreatable=True}"
    mc:Ignorable="d">
    <Menu>
        <MenuItem Header="_File">
            <MenuItem Command="{Binding NewProjectCommand}" Header="New" />
            <MenuItem Command="{Binding OpenFileCommand}" Header="Open" />
            <Separator />
            <MenuItem
                Command="{Binding DumpFactorioDataCommand}"
                Header="Factorio"
                InputGestureText="{Binding Version}" />
        </MenuItem>
        <MenuItem Header="_Output">
            <MenuItem
                Command="{Binding SetScriptLocationCommand}"
                Header="Script location"
                InputGestureText="{Binding ScriptFolder}" />
            <MenuItem Command="{Binding GenerateScriptCommand}" Header="Generate" />
        </MenuItem>
        <MenuItem Header="Step types">
            <MenuItem Header="Walk" />
            <MenuItem Header="Craft" />
            <MenuItem Header="Tech" />
        </MenuItem>
        <MenuItem Header="Log level">
            <MenuItem Header="Print savegame">
                <MenuItem.Icon>
                    <CheckBox IsChecked="{Binding PrintSavegame}" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Print tech">
                <MenuItem.Icon>
                    <CheckBox IsChecked="{Binding PrintTech}" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Print comments">
                <MenuItem.Icon>
                    <CheckBox IsChecked="{Binding PrintComments}" />
                </MenuItem.Icon>
            </MenuItem>
            <Separator />
            <MenuItem Header="Debug">
                <MenuItem.Icon>
                    <RadioButton GroupName="Environment" IsChecked="{Binding DebugMode}" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Development">
                <MenuItem.Icon>
                    <RadioButton GroupName="Environment" IsChecked="{Binding DevelopmentMode}" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Production">
                <MenuItem.Icon>
                    <RadioButton GroupName="Environment" IsChecked="{Binding ProductionMode}" />
                </MenuItem.Icon>
            </MenuItem>
        </MenuItem>
    </Menu>
</UserControl>