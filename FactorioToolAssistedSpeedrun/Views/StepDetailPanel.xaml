<UserControl
    x:Class="FactorioToolAssistedSpeedrun.Views.StepDetailPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FactorioToolAssistedSpeedrun.Views"
    xmlns:vm="clr-namespace:FactorioToolAssistedSpeedrun.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance vm:StepDetailPanelViewModel, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <Thickness x:Key="StepDetailMargin">2</Thickness>
        <Thickness x:Key="PriorityMargin">5,0,5,0</Thickness>
    </UserControl.Resources>
    <GroupBox Header="Step detail" Margin="1,2">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="02">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="{StaticResource StepDetailMargin}">
                        <TextBlock Text="X:" VerticalAlignment="Center" TextAlignment="Right" Width="60" />
                        <TextBox x:Name="XTextBox" Margin="5,0,0,0" Width="50" Height="22" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="{StaticResource StepDetailMargin}">
                        <TextBlock Text="Y:" VerticalAlignment="Center" TextAlignment="Right" Width="60" />
                        <TextBox x:Name="YTextBox"  Margin="5,0,0,0" Width="50" Height="22" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="{StaticResource StepDetailMargin}">
                        <TextBlock Text="Amount:" VerticalAlignment="Center" TextAlignment="Right" Width="60" />
                        <TextBox x:Name="AmountTextBox" Margin="5,0,0,0" Width="50" Height="22" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="{StaticResource StepDetailMargin}">
                        <TextBlock Text="Comment:" VerticalAlignment="Center" TextAlignment="Right" Width="60" />
                        <TextBox x:Name="CommentTextBox" Margin="5,0,0,0" Width="50" Height="22" VerticalContentAlignment="Center" />
                    </StackPanel>
                </Grid>
            </Border>
            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Margin="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="22" />
                        <RowDefinition Height="22" />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="{StaticResource StepDetailMargin}">
                        <TextBlock Text="Item:" VerticalAlignment="Center" TextAlignment="Right" Width="40" />
                        <ComboBox x:Name="ItemComboBox" Margin="5,0,0,0" Width="190">
                            <ComboBoxItem>Personal roboport equipment</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="{StaticResource StepDetailMargin}">
                        <TextBlock Text="Into:" VerticalAlignment="Center" TextAlignment="Right" Width="40" />
                        <ComboBox x:Name="IntoComboBox" Margin="5,0,0,0" Width="190" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="3">
                        <TextBlock Text="Input:" VerticalAlignment="Center" TextAlignment="Right" Width="50" />
                        <RadioButton x:Name="InputLeftRadio" VerticalAlignment="Center" Content="Left" Margin="10,0,0,0" />
                        <RadioButton x:Name="InputNoneRadio" VerticalAlignment="Center" Content="None" Margin="5,0,0,0" />
                        <RadioButton x:Name="InputRightRadio" VerticalAlignment="Center" Content="Right" Margin="5,0,0,0" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="4">
                        <TextBlock Text="Output:" VerticalAlignment="Center" TextAlignment="Right" Width="50" />
                        <RadioButton x:Name="OutputLeftRadio" VerticalAlignment="Center" Content="Left" Margin="10,0,0,0" />
                        <RadioButton x:Name="OutputNoneRadio" VerticalAlignment="Center" Content="None" Margin="5,0,0,0" />
                        <RadioButton x:Name="OutputRightRadio" VerticalAlignment="Center" Content="Right" Margin="5,0,0,0" />
                    </StackPanel>
                </Grid>
            </Border>
            <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1" Margin="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                        <TextBlock Text="Orientation:" VerticalAlignment="Center" TextAlignment="Right" Margin="5,0,0,0" Width="70" />
                        <ComboBox x:Name="OrientationComboBox" Margin="5,0,5,0" Width="80">
                            <ComboBoxItem>Modules</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </GroupBox>
</UserControl>