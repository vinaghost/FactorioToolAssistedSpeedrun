<UserControl
    x:Class="FactorioToolAssistedSpeedrun.Views.StepDetailPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FactorioToolAssistedSpeedrun.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:FactorioToolAssistedSpeedrun.ViewModels"
    d:DataContext="{d:DesignInstance vm:StepDetailPanelViewModel,
                                     IsDesignTimeCreatable=True}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Thickness x:Key="StepDetailMargin">2</Thickness>
        <Thickness x:Key="PriorityMargin">5,0,5,0</Thickness>
    </UserControl.Resources>
    <GroupBox Margin="1,2" Header="Step detail">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Border
                Grid.Column="0"
                Margin="02"
                BorderBrush="Gray"
                BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackPanel
                        Grid.Row="0"
                        Margin="{StaticResource StepDetailMargin}"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="60"
                            VerticalAlignment="Center"
                            Text="X:"
                            TextAlignment="Right" />
                        <TextBox
                            x:Name="XTextBox"
                            Width="50"
                            Height="22"
                            Margin="5,0,0,0"
                            HorizontalContentAlignment="Right"
                            VerticalContentAlignment="Center" />
                    </StackPanel>
                    <StackPanel
                        Grid.Row="1"
                        Margin="{StaticResource StepDetailMargin}"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="60"
                            VerticalAlignment="Center"
                            Text="Y:"
                            TextAlignment="Right" />
                        <TextBox
                            x:Name="YTextBox"
                            Width="50"
                            Height="22"
                            Margin="5,0,0,0"
                            HorizontalContentAlignment="Right"
                            VerticalContentAlignment="Center" />
                    </StackPanel>
                    <StackPanel
                        Grid.Row="2"
                        Margin="{StaticResource StepDetailMargin}"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="60"
                            VerticalAlignment="Center"
                            Text="Amount:"
                            TextAlignment="Right" />
                        <TextBox
                            x:Name="AmountTextBox"
                            Width="50"
                            Height="22"
                            Margin="5,0,0,0"
                            HorizontalContentAlignment="Right"
                            VerticalContentAlignment="Center" />
                    </StackPanel>
                    <StackPanel
                        Grid.Row="3"
                        Margin="{StaticResource StepDetailMargin}"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="60"
                            VerticalAlignment="Center"
                            Text="Comment:"
                            TextAlignment="Right" />
                        <TextBox
                            x:Name="CommentTextBox"
                            Width="50"
                            Height="22"
                            Margin="5,0,0,0"
                            VerticalContentAlignment="Center" />
                    </StackPanel>
                </Grid>
            </Border>
            <Border
                Grid.Column="1"
                Margin="2"
                BorderBrush="Gray"
                BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="22" />
                        <RowDefinition Height="22" />
                    </Grid.RowDefinitions>
                    <StackPanel
                        Grid.Row="0"
                        Margin="{StaticResource StepDetailMargin}"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="40"
                            VerticalAlignment="Center"
                            Text="Item:"
                            TextAlignment="Right" />
                        <ComboBox
                            x:Name="ItemComboBox"
                            Width="190"
                            Margin="5,0,0,0">
                            <ComboBoxItem>Personal roboport equipment</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel
                        Grid.Row="1"
                        Margin="{StaticResource StepDetailMargin}"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="40"
                            VerticalAlignment="Center"
                            Text="Into:"
                            TextAlignment="Right" />
                        <ComboBox
                            x:Name="IntoComboBox"
                            Width="190"
                            Margin="5,0,0,0" />
                    </StackPanel>
                    <StackPanel Grid.Row="3" Orientation="Horizontal">
                        <TextBlock
                            Width="50"
                            VerticalAlignment="Center"
                            Text="Input:"
                            TextAlignment="Right" />
                        <RadioButton
                            x:Name="InputLeftRadio"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Content="Left" />
                        <RadioButton
                            x:Name="InputNoneRadio"
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Content="None" />
                        <RadioButton
                            x:Name="InputRightRadio"
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Content="Right" />
                    </StackPanel>
                    <StackPanel Grid.Row="4" Orientation="Horizontal">
                        <TextBlock
                            Width="50"
                            VerticalAlignment="Center"
                            Text="Output:"
                            TextAlignment="Right" />
                        <RadioButton
                            x:Name="OutputLeftRadio"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Content="Left" />
                        <RadioButton
                            x:Name="OutputNoneRadio"
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Content="None" />
                        <RadioButton
                            x:Name="OutputRightRadio"
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Content="Right" />
                    </StackPanel>
                </Grid>
            </Border>
            <Border
                Grid.Column="2"
                Margin="2"
                BorderBrush="Gray"
                BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <TextBlock
                            Width="70"
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Text="Orientation:"
                            TextAlignment="Right" />
                        <ComboBox
                            x:Name="OrientationComboBox"
                            Width="80"
                            Margin="5,0,5,0">
                            <ComboBoxItem>Modules</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </GroupBox>
</UserControl>