<UserControl
    x:Class="FactorioToolAssistedSpeedrun.Views.TemplatesTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FactorioToolAssistedSpeedrun.Views"
    xmlns:vm="clr-namespace:FactorioToolAssistedSpeedrun.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance vm:TemplatesTabViewModel, IsDesignTimeCreatable=True}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            
            <ColumnDefinition Width="*"/>

            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <ComboBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" MinWidth="150" Margin="2"/>
        <Button Grid.Row="0" Grid.Column="3" Content="New" Margin="2"/>
        <Button Grid.Row="0" Grid.Column="4" Content="Delete" Margin="2"/>

        <Button Grid.Row="1" Grid.Column="0" Content="Add" Margin="2"/>
        <Button Grid.Row="1" Grid.Column="1" Content="Change" Margin="2"/>
        <Button Grid.Row="1" Grid.Column="2" Content="Delete" Margin="2"/>
        <Button Grid.Row="1" Grid.Column="3" Content="Up" Margin="2" />
        <Button Grid.Row="1" Grid.Column="4" Content="Down" Margin="2"/>

        <GridSplitter Grid.Row="0" Grid.Column="5" Grid.RowSpan="2"/>

        <Button Grid.Row="0" Grid.Column="6" Content="Export" Margin="2" />
        <Button Grid.Row="1" Grid.Column="6" Content="Import" Margin="2" />

        <StackPanel Grid.Row="0" Grid.Column="7" Orientation="Horizontal" Margin="2">
            <TextBlock Text="Offset:" VerticalAlignment="Center" />
            <TextBox Width="40" Text="0" />
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="7" Orientation="Horizontal" Margin="2">
            <TextBlock Text="Multiplier:" VerticalAlignment="Center" />
            <TextBox Width="40" Text="1" />
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="8" Orientation="Horizontal" Margin="2">
            <TextBlock Text="X:" Margin="2,0,0,0" VerticalAlignment="Center" />
            <TextBox Width="40" Margin="2" Text="0" />
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="8" Orientation="Horizontal" Margin="2">
            <TextBlock Text="Y:" Margin="2,0,0,0" VerticalAlignment="Center" />
            <TextBox Width="40" Margin="2" Text="0" />
        </StackPanel>


        <TextBox Grid.Row="0" Grid.Column="9" Margin="2" Text="0" />
        <ComboBox Grid.Row="1" Grid.Column="9"  MinWidth="80" Margin="2">
            <ComboBoxItem Content="Normal" />
        </ComboBox>
        
        <!-- DataGrid/Table area -->
        <DataGrid 
            Grid.Row="2" 
            Grid.ColumnSpan="10"
            AutoGenerateColumns="False" 
            HeadersVisibility="All" 
            CanUserAddRows="False" 
            CanUserDeleteRows="False"
            CanUserReorderColumns="False"
            CanUserSortColumns="False"
            Margin="0,0,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="" Width="40" />
                <DataGridTextColumn Header="Step" Width="80" />
                <DataGridTextColumn Header="X" Width="80" />
                <DataGridTextColumn Header="Y" Width="80" />
                <DataGridTextColumn Header="Amount" Width="80" />
                <DataGridTextColumn Header="Item" Width="120" />
                <DataGridTextColumn Header="Orientation" Width="80" />
                <DataGridTextColumn Header="Modifiers" Width="80" />
                <DataGridTextColumn Header="Comment" Width="120" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>