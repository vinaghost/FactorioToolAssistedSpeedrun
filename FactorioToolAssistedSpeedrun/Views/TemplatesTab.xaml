<UserControl
    x:Class="FactorioToolAssistedSpeedrun.Views.TemplatesTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FactorioToolAssistedSpeedrun.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:FactorioToolAssistedSpeedrun.ViewModels"
    d:DataContext="{d:DesignInstance vm:TemplatesTabViewModel,
                                     IsDesignTimeCreatable=True}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />

            <ColumnDefinition Width="*" />

            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <ComboBox
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            MinWidth="150"
            Margin="2" />
        <Button
            Grid.Row="0"
            Grid.Column="3"
            Margin="2"
            Content="New" />
        <Button
            Grid.Row="0"
            Grid.Column="4"
            Margin="2"
            Content="Delete" />

        <Button
            Grid.Row="1"
            Grid.Column="0"
            Margin="2"
            Content="Add" />
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Margin="2"
            Content="Change" />
        <Button
            Grid.Row="1"
            Grid.Column="2"
            Margin="2"
            Content="Delete" />
        <Button
            Grid.Row="1"
            Grid.Column="3"
            Margin="2"
            Content="Up" />
        <Button
            Grid.Row="1"
            Grid.Column="4"
            Margin="2"
            Content="Down" />

        <GridSplitter
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="5" />

        <Button
            Grid.Row="0"
            Grid.Column="6"
            Margin="2"
            Content="Export" />
        <Button
            Grid.Row="1"
            Grid.Column="6"
            Margin="2"
            Content="Import" />

        <StackPanel
            Grid.Row="0"
            Grid.Column="7"
            Margin="2"
            Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Text="Offset:" />
            <TextBox Width="40" Text="0" />
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Grid.Column="7"
            Margin="2"
            Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Text="Multiplier:" />
            <TextBox Width="40" Text="1" />
        </StackPanel>

        <StackPanel
            Grid.Row="0"
            Grid.Column="8"
            Margin="2"
            Orientation="Horizontal">
            <TextBlock
                Margin="2,0,0,0"
                VerticalAlignment="Center"
                Text="X:" />
            <TextBox
                Width="40"
                Margin="2"
                Text="0" />
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Grid.Column="8"
            Margin="2"
            Orientation="Horizontal">
            <TextBlock
                Margin="2,0,0,0"
                VerticalAlignment="Center"
                Text="Y:" />
            <TextBox
                Width="40"
                Margin="2"
                Text="0" />
        </StackPanel>

        <TextBox
            Grid.Row="0"
            Grid.Column="9"
            Margin="2"
            Text="0" />
        <ComboBox
            Grid.Row="1"
            Grid.Column="9"
            MinWidth="80"
            Margin="2">
            <ComboBoxItem Content="Normal" />
        </ComboBox>

        <!--  DataGrid/Table area  -->
        <DataGrid
            Grid.Row="2"
            Grid.ColumnSpan="10"
            Margin="0,0,0,0"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            CanUserReorderColumns="False"
            CanUserSortColumns="False"
            HeadersVisibility="All">
            <DataGrid.Columns>
                <DataGridTextColumn Width="40" Header="" />
                <DataGridTextColumn Width="80" Header="Step" />
                <DataGridTextColumn Width="80" Header="X" />
                <DataGridTextColumn Width="80" Header="Y" />
                <DataGridTextColumn Width="80" Header="Amount" />
                <DataGridTextColumn Width="120" Header="Item" />
                <DataGridTextColumn Width="80" Header="Orientation" />
                <DataGridTextColumn Width="80" Header="Modifiers" />
                <DataGridTextColumn Width="120" Header="Comment" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>